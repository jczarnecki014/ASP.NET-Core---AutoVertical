@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container-fluid">
    <div class="row">
        <div style="background-color:#5cbaff;" class="col-lg-3 vh-100 mh-100">
            <div class="container">
                <div class="row min-vh-100 align-content-between">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index">
                       <img class="img-fluid w-50" src="/image/main/Logo_trans_white.png" />
                    </a>
                    <h3 class="text-center">Login</h3>
                    <img class="img-fluid w-100" src="/image/svgIcons/login.png" />
                </div>
            </div>
        </div>
        <div style="background-color: #0093ff" class="col-lg-9">
            <div class="container">
                <div class="row min-vh-100 d-flex align-items-center justify-content-center">
                    <div class="col-lg-5">
                        <h5 class="text-light">Get more things done with Loggin platform</h5>
                        <p class="text-light">Access to the most powerfull tool in the entire design and web industry.</p>
                        <div class="row">
                            <div class="col-2 mx-2">
                                    <a class="btn text-light">
                                        Login
                                        <hr style="border-width:5px;"/>
                                    </a>
                            </div>
                            <div class="col-2 mx-2" asp-area="Identity" asp-page="/Account/Login">
                                <a asp class="btn text-light" asp-area="Identity" asp-page="/Account/Register">
                                    Register
                                    <hr />
                                </a>
                            </div>
                        </div>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <div class="col-lg-12 form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-12 form-floating mb-3">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="checkbox mb-3">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    <div class="col-lg-12">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                    </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
