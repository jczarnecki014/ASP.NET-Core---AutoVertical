@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container-fluid">
    <div class="row">
        <div style="background-color:#5cbaff;" class="col-lg-3 vh-100 mh-100">
            <div class="container">
                <div class="row min-vh-100 align-content-between">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index">
                       <img class="img-fluid w-50" src="/image/main/Logo_trans_white.png" />
                    </a>
                    <h3 class="text-center">Register account</h3>
                    <img class="img-fluid w-100" src="/image/svgIcons/login.png" />
                </div>
            </div>
        </div>
        <div style="background-color: #0093ff" class="col-lg-9">
            <div class="container">
                <div class="row min-vh-100 d-flex align-items-center justify-content-center">
                    <div class="col-lg-5">
                        <h5 class="text-light">Get more things done with Loggin platform</h5>
                        <p class="text-light">Access to the most powerfull tool in the entire design and web industry.</p>
                        <div class="row">
                            <div class="col-2 mx-2">
                                    <a class="btn text-light" asp-area="Identity" asp-page="/Account/Login">
                                        Login
                                        <hr/>
                                    </a>
                            </div>
                            <div class="col-2 mx-2">
                                <a class="btn text-light">
                                    Register
                                    <hr style="border-width:5px;"/>
                                </a>
                            </div>
                        </div>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="col-lg-12 form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 form-floating mb-3">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.Password">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 form-floating mb-3">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-12 form-floating mb-3">
                                        <input asp-for="Input.user.Name" class="form-control"  placeholder="name" />
                                        <label asp-for="Input.user.Name"></label>
                                        <span asp-validation-for="Input.user.Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-12 form-floating mb-3">
                                        <input asp-for="Input.user.Surname" class="form-control"  placeholder="Surname" />
                                        <label asp-for="Input.user.Surname"></label>
                                        <span asp-validation-for="Input.user.Surname" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 form-floating mb-3">
                                        <input asp-for="Input.user.Country" class="form-control"  placeholder="Surname" />
                                        <label asp-for="Input.user.Country"></label>
                                        <span asp-validation-for="Input.user.Country" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 form-floating mb-3">
                                        <input asp-for="Input.user.City" class="form-control"  placeholder="Surname" />
                                        <label asp-for="Input.user.City"></label>
                                        <span asp-validation-for="Input.user.City" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 form-floating mb-3">
                                        <input asp-for="Input.user.PostCode" class="form-control"  placeholder="Surname" />
                                        <label asp-for="Input.user.PostCode"></label>
                                        <span asp-validation-for="Input.user.PostCode" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 form-floating mb-3">
                                        <input asp-for="Input.user.Street" class="form-control"  placeholder="Surname" />
                                        <label asp-for="Input.user.Street"></label>
                                        <span asp-validation-for="Input.user.Street" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-12 form-floating mb-3">
                                        <input asp-for="Input.user.StreetNumber" class="form-control"  placeholder="Surname" />
                                        <label asp-for="Input.user.StreetNumber"></label>
                                        <span asp-validation-for="Input.user.StreetNumber" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-12 form-floating mb-3">
                                        <input asp-for="Input.user.PhoneNumber" class="form-control"  placeholder="Surname" />
                                        <label asp-for="Input.user.PhoneNumber"></label>
                                        <span asp-validation-for="Input.user.PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-12">
                                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                                    </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

